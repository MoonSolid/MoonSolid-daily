<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daily.dao.BoardDao">

	<resultMap type="Board" id="BoardMap">
		<id column="board_no" property="boardNumber" />
		<result column="title" property="title" />
		<result column="view_count" property="viewCount" />
		<result column="content" property="content" />
		<result column="posting_registration"
      property="postingRegistration" />
	</resultMap>

	<insert id="insert" parameterType="Board"
		useGeneratedKeys="true" keyColumn="board_no" keyProperty="boardNumber">
		insert into board(
		title,
		content,
		posting_registration,
		view_count)
		values(
		#{title},
		#{content},
		now(),
		0)
	</insert>

	<select id="findAll" resultMap="BoardMap">
		select
		board_no,
		title,
		content,
		posting_registration
		from board
		order by
		board_no desc
	</select>

	<select id="findByNo" resultMap="BoardMap" parameterType="int">
		select
		board_no,
		title,
		view_count,
		content
		from board	
		where
		board_no=#{boardNumber}
	</select>

	<delete id="delete" parameterType="int">
		delete from board
		where
		board_no=#{boardNumber}
	</delete>
	
	<update id="update" parameterType="Board">
    update board
    <set>
      <if test="title != null and title != ''">title=#{title},</if>
      <if test="content != null and content != ''">content=#{content}</if>
    </set>
    where board_no=#{boardNumber}
  </update>
	
	<update id="viewCount" parameterType="int">
    update board
    set
    view_count = view_count + 1 where board_no = #{boardNumber}
  </update>

</mapper>